         function experiencia (anos){
             if(anos == 0 || anos == 1){
              return "inciante";
              
              }else if(anos >= 1 && anos <= 3 ){ //lembre de usar os operadores logicos
                                                  // quando temos mais de um condição dentro da mesma
              return "medio";
              
              }else if(anos >=3 && anos <= 6){
              return "intermediario"
              
              }else if(anos >=7 ){
              return "senior";
             }else{
                return "nao listado";
            }
         }
      
      
      
